{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "files": {
    "include": ["*.*ts", "**/*.*ts", "*.json", "*.jsonc"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "root": ".",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
